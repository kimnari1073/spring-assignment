{{>layouts/header}}
{{#article}}

<form class="container" action="/articles/edit-page">
    <div style="visibility: hidden;">
        <input name="id" value="{{id}}" >
    </div>
    <div class="mb-3">
        <label class="form-label" for="title1">제목</label>
        <input class="form-control"
               id="title1"
               name="title"
               value={{title}} readonly>
    </div>
    <div class="mb-3">
        <label class="form-label" for="content">내용</label>
        <textarea class="form-control"
                  rows="3"
                  id="content"
                  name="content" readonly>{{content}}</textarea>
    </div>
    <div class="mb-3">
        <label class="form-label" for="date">생성일</label>
        <input class="form-control"
               id="date"
               value="{{createdAt}}" readonly>
    </div>
    <button class="btn btn-primary">글 수정</button>
    <a href="/articles/{{id}}/delete"  id="btn-delete" class="btn btn-danger"> 글삭제 </a>
    <a href="/articles" class="btn btn-primary"> 게시판 목록 </a>
</form>
{{/article}}



