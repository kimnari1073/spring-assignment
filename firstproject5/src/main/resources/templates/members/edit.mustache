{{>layouts/header}}

{{#member}}
    <form class="container" action="/member/update" method="post">
        <input name="id" type="hidden" value="{{id}}"> id: {{id}}
        <div class="mb-3">
            <label class="form-label">회원 아이디: {{loginId}}</label>
            <input type="text" class="form-control" name="loginId" value="{{loginId}}">
        </div>
        <div class="mb-3">
            <label class="form-label">회원 닉네임: {{nickname}}</label>
            <input type="text" class="form-control" name="nickname" value="{{nickname}}">
        </div>
        <div class="mb-3">
            <label class="form-label">회원 비밀번호: {{password}}</label>
            <input type="text" class="form-control" name="password" value="{{password}}">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <a href="/member/{{id}}">Back</a>
    </form>
{{/member}}

{{>layouts/footer}}
